  "devDependencies": {
    "@antfu/eslint-config": "^5.2.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "bumpp": "^10.2.2",
    "eslint": "^9.33.0",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tsdown": "^0.13.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
