{
  "name": "react-router-themes",
  "version": "0.0.1",
  "type": "module",
  "description": "Modern and simple react router theme supports. Enable changes theme with simple block code with no flashing.",
  "keywords": [
    "react-router",
    "theme",
    "dark mode",
    "dark theme",
    "theme switcher",
    "remix",
    "react router v7",
    "react theme"
  ],
  "contributors": [
    {
      "name": "Nyoman Sunima",
      "email": "nyomansunima@gmail.com",
      "url": "https://nyomansunima.com"
    }
  ],
  "license": "MIT",
  "homepage": "https://github.com/weecraft/react-router-themes#readme",
  "bugs": {
    "url": "https://github.com/weecraft/react-router-themes/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weecraft/react-router-themes.git"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "publishConfig": {
